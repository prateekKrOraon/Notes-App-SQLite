<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_21"
        android:paddingTop="25dp"
        tools:context=".NotesEditor">
    <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_editor"
                android:hint="@string/editor_add_title"
                android:textColorHint="@color/grey_61"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_weight="5"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_clear_black_24"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:tint="@color/grey_61"
                android:id="@+id/editor_title_clear"/>

    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:hint="@string/editor_add_note"
            android:textColorHint="@color/grey_61"
            android:background="@android:color/transparent"
            android:ems="10"
            android:scrollbars="horizontal"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/des_editor"/>



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/editor_discard"
                android:textColor="@color/white"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/editor_discard"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/editor_save"
                android:textColor="@color/white"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/editor_save"/>

    </LinearLayout>


</LinearLayout>